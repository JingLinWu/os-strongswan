AC_ARG_ENABLE(
    [http],
    AS_HELP_STRING([--enable-http],[enable OCSP and fetching of Certificates and CRLs over HTTP (default is NO). Requires libcurl.]),
    [if test x$enableval = xyes; then
        http=true
        AC_DEFINE(LIBCURL)
    fi]
)
AM_CONDITIONAL(USE_LIBCURL, test x$http = xtrue)

